<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pattern_bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.androidtown.book.mission03.LoginActivity" >

    <ImageView
        android:id="@+id/ImageView02"
        android:layout_width="800dp"
        android:layout_height="5dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/ImageView01"
        android:background="@drawable/bg_bar" />

    <ImageView
        android:id="@+id/ImageView03"
        android:layout_width="800dp"
        android:layout_height="800dp"
        android:layout_alignBottom="@+id/ImageView02"
        android:layout_below="@+id/ImageView02"
        android:background="@drawable/table" />

    <ImageView
        android:id="@+id/ImageView04"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ImageView02"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:background="@drawable/in" />

    <ImageView
        android:id="@+id/ImageView01"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/ImageView02"
        android:background="@drawable/logo" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ImageView01"
        android:layout_alignRight="@+id/ImageView01"
        android:layout_marginBottom="14dp"
        android:text="이송이 사원"
        android:textColor="#00FFFF"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_alignRight="@+id/ImageView04"
        android:layout_below="@+id/ImageView04"
        android:layout_marginTop="33dp" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_marginLeft="1dp"
                android:background="#999"
                android:padding="3dp"
                android:text="사원이름" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
              
                android:layout_marginLeft="1dp"
                android:background="#999"
                android:padding="3dp"
                android:text="승인날짜" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"

                android:layout_marginLeft="1dp"
                android:background="#999"
                android:padding="3dp"
                android:text="유형" />

            <TextView
                
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:background="#999"
                android:padding="3dp"
                android:text="비고" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
        </TableRow>

        <ListView
            android:id="@+id/listView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </ListView>

    </TableLayout>
        <TextView
             android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ImageView01"
        android:layout_alignRight="@+id/ImageView01"
        android:layout_marginBottom="14dp"
        android:textColor="#00FFFF"
        android:textSize="18dp"
        android:textStyle="bold" />
	
        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="14dp"
            android:layout_toLeftOf="@+id/ImageView01"
            android:text="Button" />

</RelativeLayout>